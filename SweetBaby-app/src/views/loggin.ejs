<!-- Include Head -->
<%- include('partials/head', {title: 'Registro'}) %>
<body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->  
    
    <main>
        <div class="container">
            <% if(error) { %>
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h2 class="card-title"><%=error%></h2>
                    </div>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body row">
                    <div class="col-6 registro">
                        <div class="card-header text-center">
                            <h2>Registro</h2>
                        </div>
                        <form action="/user/register" method="GET">
                            <div class="card-body cart-section">

                                <div class="row cart-container">
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Unete</h5>
                                        <!-- <input type="text" name="firstName" id="firstName" placeholder="Nombre" required> -->
                                        <p>Registrate! y enterate primero de las novedades y promociones!</p>
                                    </div>
                                </div>

                                <div class="row cart-container">
                                    <button type="submit" class="btn btn-primary" id="Enviar-button" required>Regístrate</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-6 loggin">
                        <div class="card-header text-center">
                            <h2>Ingresar</h2>
                        </div>
                        <form action="/user/login" method="POST">
                            <div class="card-body cart-section">
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Email</h5>
                                        <input type="email" name="email" id="email" placeholder="Email" onchange="return validateFieldEmail(this)" required>
                                    </div>
                                </div>   
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Contraseña</h5>
                                        <input type="password" name="password" id="password" placeholder="Contraseña" onchange="return ValidarField(this, 8)" required>
                                    </div>
                                </div>
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item-noBr">
                                        <input type="checkbox" name="recordame" value="onLogOn" id="recordame">  
                                        <label class="card-title" for="recordame">Permanecer Conectado</label>                                        
                                    </div>
                                </div>
                                <div class="row cart-container">
                                    <button type="submit" class="btn btn-primary" id="Enviar-button"required >Iniciar sesión</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>            
        </div>
    </main>
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>
