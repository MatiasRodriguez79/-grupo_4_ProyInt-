<!-- Include Head -->
<%- include('partials/head', {title: 'Registro'}) %>
<body>
   <!-- Header -->
	<%- include('partials/headerNavbar') %>
    <!-- /Header -->
    <main>
        <div class="container">
            <% if(error) { %>
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h2 class="card-title"><%=error%></h2>
                    </div>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body row">
                    <div class="col-6 registro">
                        <div class="card-header text-center">
                            <h2>Registro</h2>
                        </div>
                        <form action="/user/register" method="POST">
                            <div class="card-body cart-section">
                                <div class="row cart-container">
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Nombre</h5>
                                        <input type="text" name="firstName" id="firstName" placeholder="Nombre" required>
                                    </div>
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Apellido</h5>
                                        <input type="text" name="lastName" id="lastName" placeholder="Apellido">  
                                    </div>
                                </div>

                                <div class="row cart-container">
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Email</h5>
                                        <input type="email" name="emailRegister1" id="emailRegister1" placeholder="ejemplo@outlook.com" required>  
                                    </div>
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">  Repetir Email</h5>
                                        <input type="email" name="emailRegister2" id="emailRegister2" placeholder="Repetir email" required>
                                    </div>
                                </div>

                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item-noBr">
                                        <label class="card-title" for="Boletin-noticias">Boletin de Noticias</label>
                                        <input type="checkbox" name="boletin-noticias" value="acorde" id="Boletin-noticias"> 
                                    </div>
                                </div>
                                
                                <div class="row cart-container">
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Contraseña</h5>
                                        <input type="password" name="passwordRegister1" id="passwordRegister1" placeholder="Contraseña" required>   
                                    </div>
                                    <div class="col-lg-6 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Repetir Contraseña</h5>
                                        <input type="password" name="passwordRegister2" id="passwordRegister2" placeholder="Repetir Contraseña" required> 
                                    </div>
                                </div>

                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item-noBr">
                                        <label class="card-title" for="aceptar-condiciones">Aceptar Condiciones</label>
                                        <input type="checkbox" name="aceptar-condiciones" value="acepta" id="aceptar-condiciones" required>  
                                    </div>
                                </div>

                                <div class="row cart-container">
                                    <button type="submit" class="btn btn-primary" id="Enviar-button" required>Regístrate</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-6 loggin">
                        <div class="card-header text-center">
                            <h2>Ingresar</h2>
                        </div>
                        <form action="/user/login" method="POST">
                            <div class="card-body cart-section">
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Email</h5>
                                        <input type="email" name="email" id="email" placeholder="ejemplo@gmail.com" required>
                                    </div>
                                </div>   
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item">
                                        <h5 class="card-title" for="">Contraseña</h5>
                                        <input type="password" name="password" id="password" placeholder="Contraseña" required>
                                    </div>
                                </div>
                                <div class="row cart-container">
                                    <div class="col-lg-12 col-sm-12 cart-item-noBr">
                                        <input type="checkbox" name="permanecer-conectado" value="onLogOn" id="permanecer-conectado">  
                                        <label class="card-title" for="permanecer-conectado">Permanecer Conectado</label>                                        
                                    </div>
                                </div>
                                <div class="row cart-container">
                                    <button type="submit" class="btn btn-primary" id="Enviar-button"required >Iniciar sesión</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>            
        </div>
    </main>
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html