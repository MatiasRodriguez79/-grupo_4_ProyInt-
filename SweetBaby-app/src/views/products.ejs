<!-- Include Head -->
<%- include('partials/head', {title: 'Productos'}) %>
<body>
    <!-- Header -->
	<%- include('partials/headerNavbar') %>
    <!-- /Header -->
    
    <div class="container">
        <div class="row products-wrapper">
            <div class="col-xs-5 col-sm-4 col-md-3">
                <div class="left-navbar">
                    <h1 class="title">Todas</h1>
                    <p><%= products.length %><!-- --> <!-- -->productos</p>
                    <h2 class="subtitle">Categorías</h2>
                    <ul class="list">
                        <li><a class="list_element active" href="/products">Todas las categorías</a></li>
                        <li><a class="list_element " href="/products?cat=1">Butacas</a></li>
                        <li><a class="list_element " href="/products?cat=2">Juguetes</a></li>
                        <li><a class="list_element " href="/products?cat=3">Cochecitos</a></li>
                        <li><a class="list_element " href="/products?cat=4">Ropa</a></li>
                        <li><a class="list_element " href="/products?cat=5">Accesorios</a></li>                        
                        <li><a class="list_element " href="/products?cat=6">Colechos y Practicunas</a></li>    
                    </ul>
                                    
                </div>                
            </div>
            <div class="col-xs-7 col-sm-8 col-md-9">
                <div class="products-container">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title"><%= titleCategory%></h2>
                        </div>

                        <% for (product of products) { %>

                        <div class="col-12 col-sm-6 col-lg-4">
                            <section class="product-box">
                                <a href="/products/detail/<%=product.id%>">
                                    <figure class="product-box_image">
                                        <img src="/images/products/<%=product.image%>" alt="imagen de producto">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2><%= thousandGenerator(product.priceVenta) %></h2>
                                        <% if(product.descuento > 0) { %>
                                            <span><%= product.descuento%>% OFF</span>
                                        <% } %>
                                        <p><%= product.name%></p>                                    
                                    </article>
                                    <button class="far fa-heart"></button>
                                </a>
                            </section>
                        </div>

                        <% } %>
                        
                    </div>
                </div>

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center pagination-lg">
                      <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
            </div>
        </div>
    </div>	


    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>