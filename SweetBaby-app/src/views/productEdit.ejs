<!-- Include Head -->
<%- include('partials/head', {title: 'Modificacion de Productos'}) %>
<body> 
    <!-- Header -->
	<%- include('partials/headerNavbar') %>
    <!-- /Header -->
    
    <main class="bodyCargaProductos">
        <div class="titulo container-fluid">
            <h4>Modificacion de Producto:</h4>
        </div>
        <div class="main container">
        <!--<form action="/products/create" method="POST" enctype= "multipart/form-data">-->
            <form method="POST"  action="/products/edit/<%= productToEdit.id%>?_method=PUT" >
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12 division1">
                        <div class="row">
                            <div class = "col-4">
                                <label  for="category">Categoria:</label> 
                            </div>  
                            <div class="col-8">               
                                <select  class= "custom-select select" name="idCategory" id= "category"  required>
                                    <%for( let i = 0; i < categories.length; i++) { %>
                                        <option value="<%=categories[i].id %>"><%=categories[i].name%></option>                                   
                                    <%}%>         
                                </select>  
                            </div>                           
                        </div>
                        <br>
                
                        <div class="row"> 
                            <div class="col-4" >
                                <label for="name">Nombre:</label>
                            </div>
                            <div class="col-8">
                                <input class="inputTexto" type="text"  id="name" name = "name"  placeholder="Ej: Cochecito Paraguita Duck" value="<%= productToEdit.name %>"required> 
                            </div>                  
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-4">
                                <label for="priceVenta">Precio de Venta:</label>
                            </div>
                            <div class="col-8">
                                <input class="inputNumerico" type="number"  id="priceVenta" name = "priceVenta" value="<%= productToEdit.price_venta %>" required>
                            </div>
                        </div>
    
                        <div class="row">
                            <div class= "col-4">
                                <label  for="priceCompra">Precio de Compra:</label>
                            </div>
                            <div class="col-8">
                                <input class=" inputNumerico"  type="number"  id="priceCompra" name = "priceCompra" value="<%= productToEdit.price_compra %>" required>   
                            </div>
                        </div>
    
                        <div class="row">
                            <div class="col-4">
                                <label  for="dateAlta">Fecha de alta:</label>
                            </div>
                            <div class="col-8">
                                <input class=" inputNumerico"  type="date"  id="dateAlta" name = "dateAlta" value="<%= productToEdit.created_date %>"required>
                            </div>
                        </div>
    
                        <div class="row">
                            <div class = "col-4">
                                <label  for="stock">Stock:</label>
                            </div>
                            <div class="col-8">
                                <input class="inputNumerico"  type="number"  id="stock" name = "stock" value="<%= productToEdit.stock %>" required>   
                            </div>             
                        </div>
                        <br>
                        <div class="row">    
                            <div class="col-4" >          
                                <label for="descuento">Descuento:</label>
                            </div> 
                            <div class="col-8">
                                <input class="inputNumerico"  type="descuento"  id="stock" name = "descuento"placeholder="Es un %" value="<%= productToEdit.discount %>"" required>  
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-4">
                                <label  for="cuotas">Disponible en cuotas:</label>
                            </div>
                            <div class="col-8">
                                <input  type="radio" name="cuotas" id="si" value="S" checked> <label for="si" >SÃ­</label>
                                <input type="radio" name="cuotas" id="no" value="N"> <label for="no">No</label>
                            </div>
                        </div>
                    </div>
    
                    <div class="col-lg-6 col-md-12 col-sm-12 division2">
                        <div class="row">
                            <div class="col-4">
                                <label for="descripcion">Descripcion del Producto:</label>
                            </div>
                            <div class="col-8 contentEditable">
                                <textarea class="rounded" name ="descripcion"><%= productToEdit.description %> </textarea>                                
                            </div>
                        </div>
    
                        <div class="row">
                            <div class="col-4">
                                <label for="infoAdic">Informacion Adicional:</label></p>
                            </div>
                            <div class="col-8 contentEditable">
                                <textarea class="rounded" name ="infoAdic" id = "" cols = "40" rows= "5"value="infoAdic" ><%= productToEdit.adicional_info %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
    
                <div class="barraBotones">
                    <p> 
                        <input class="btn btn-primary" type="submit" value="Modificar">
                    </p>
                <div>
            </form>
        </div>
    </main>
    
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->    
</body>
</html>